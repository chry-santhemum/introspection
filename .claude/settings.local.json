{
  "permissions": {
    "allow": [
      "mcp__ide__getDiagnostics",
      "Bash(python -m py_compile:*)",
      "Bash(python -c:*)",
      "Bash(source ~/.venv/bin/activate)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(find:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "orchestra-mcp"
  ],
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/bell.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/bell.sh"
          }
        ]
      }
    ]
  }
}
